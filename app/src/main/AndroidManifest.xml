<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hueandme.sfeerapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ConnectActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SpacesActivity" />
        <activity android:name=".activities.SferenActivity" />
        <activity android:name=".activities.PersonalActivity" />
        <activity android:name=".activities.CreateSfeerActivity" />
        <activity android:name=".activities.SettingsActivity"></activity>
    </application>

</manifest>