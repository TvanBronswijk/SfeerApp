<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.hueandme"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.hueandme.EntryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.hueandme.ConnectActivity">
        </activity>
        <activity
            android:name="com.hueandme.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.hueandme.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.hueandme.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hueandme.MainActivity"/>
        </activity>
        <activity android:name="com.hueandme.CurrentMoodActivity">
        </activity>
    </application>

</manifest>