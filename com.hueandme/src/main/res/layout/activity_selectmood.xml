<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/background">

    <TextView
        android:text="@string/moods_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/moodTitle" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/activeMood"
        style="@style/mood_image_style"
        android:layout_width="167dp"
        android:layout_height="152dp"
        android:text="@string/btn_comfort"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginTop="160dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/happybuttonMood"
                style="@style/notification_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_happy"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="happy"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/angrybuttonMood"
                style="@style/notification_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_angry"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="comfort"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/sadbuttonMood"
                style="@style/notification_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_sad"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="peaceful"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/phlegmaticbuttonMood"
                style="@style/notification_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="@string/btn_phlegmatic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="optimistic"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/comfortbuttonMood"
                style="@style/notification_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_comfort"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="inspired"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>